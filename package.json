{
	"name": "pxnx-discord-bot-js",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"dev": "bun run scripts/dev.ts",
		"dev:bot": "bun run --watch index.ts",
		"start": "bun run index.ts",
		"sync": "bun run deploy-commands.ts",
		"purge": "bun run reset-commands.ts",
		"fetch": "bun run fetch-commands.ts",
		"lint": "bunx biome check .",
		"lint:fix": "bunx biome check --write .",
		"format": "bunx biome format --write .",
		"typecheck": "tsc --noEmit",
		"test": "bun test tests/utils/",
		"test:integration": "bun test --preload ./tests/setup/searchyLifecycle.ts tests/integration/",
		"test:all": "bun test --preload ./tests/setup/searchyLifecycle.ts",
		"test:watch": "bun test --watch"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "latest",
		"@types/node": "^25.2.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@discordjs/opus": "^0.10.0",
		"@discordjs/voice": "^0.19.0",
		"@snazzah/davey": "^0.1.9",
		"discord.js": "^14.25.1",
		"ffmpeg-static": "^5.3.0",
		"sodium-native": "^5.0.10"
	}
}
